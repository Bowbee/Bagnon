<Ui>
    <Button name="BagnonMenuButtonTemplate" virtual="true">
		<Size x="20" y="20"/>
		<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress"/>
		<NormalTexture file="Interface\Buttons\UI-Quickslot2">
			<Size x="34" y="34"/>
			<Anchors>
				<Anchor point="CENTER" x="0" y="0"/>
			</Anchors>
		</NormalTexture>
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="0">
				<Texture parentKey="Bg">
					<Color r="0" g="0" b="0"/>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="1">
				<Texture parentKey="Icon"/>
			</Layer>
		</Layers>
	</Button>
	<Button name="BagnonOwnerSelectorTemplate" inherits="BagnonMenuButtonTemplate" virtual="true"/>

	<CheckButton name="BagnonMenuCheckButtonTemplate" inherits="BagnonMenuButtonTemplate" virtual="true">
		<CheckedTexture file="Interface\Buttons\CheckButtonHilight" alphaMode="ADD"/>
	</CheckButton>
	<CheckButton name="BagnonSortButtonTemplate" inherits="BagnonMenuCheckButtonTemplate" virtual="true">
		<Scripts>
			<OnLoad>
				self.Icon:SetTexture('Interface/Addons/BagBrother/Art/Broom')
			</OnLoad>
		</Scripts>
	</CheckButton>
		<CheckButton name="BagnonReagentButtonTemplate" inherits="BagnonMenuCheckButtonTemplate" virtual="true">
		<Scripts>
			<OnLoad>
				self.Icon:SetTexture('Interface/Addons/BagBrother/Art/Reagents')
			</OnLoad>
		</Scripts>
	</CheckButton>
	<CheckButton name="BagnonBagToggleTemplate" inherits="BagnonMenuCheckButtonTemplate" virtual="true">
		<Scripts>
			<OnLoad>
				self.Icon:SetTexture(130716)
			</OnLoad>
		</Scripts>
	</CheckButton>

	<Frame name="BagnonDialogSkinTemplate" inherits="DialogBorderNoCenterTemplate" virtual="true">
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="-5">
				<Texture parentKey="Bg" file="Interface\Tooltips\UI-Tooltip-Background" horizTile="true" vertTile="true">
					<Anchors>
						<Anchor point="TOPRIGHT" x="-7" y="-7"/>
						<Anchor point="BOTTOMLEFT" x="7" y="7"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Frame>
	<Frame name="BagnonInsetSkinTemplate" inherits="InsetFrameTemplate2" virtual="true">
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="-5">
				<Texture parentKey="Bg" file="Interface\Tooltips\UI-Tooltip-Background" horizTile="true" vertTile="true">
					<Anchors>
						<Anchor point="TOPRIGHT" x="-1" y="-1"/>
						<Anchor point="BOTTOMLEFT" x="1" y="1"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Frame>
	<Frame name="BagnonFlatSkinTemplate" virtual="true">
		<Layers>
			<Layer level="BORDER">
				<Texture parentKey="Top">
					<Anchors>
						<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT"/>
						<Anchor point="TOPLEFT" y="-1"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Bottom">
					<Anchors>
						<Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT"/>
						<Anchor point="BOTTOMLEFT" y="1"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Left">
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT" x="1"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Right">
					<Anchors>
						<Anchor point="TOPRIGHT"/>
						<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="-1"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND">
				<Texture parentKey="Center">
					<Anchors>
						<Anchor point="TOPRIGHT" relativeKey="$parent.Top" relativePoint="BOTTOMRIGHT"/>
						<Anchor point="BOTTOMLEFT" relativeKey="$parent.Bottom" relativePoint="TOPLEFT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Frame>
</Ui>
